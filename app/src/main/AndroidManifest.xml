<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nwg.newworlduide">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android:hardwareAccelerated"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewWorldMMORPGUltimateGuide">
        <activity
            android:name="com.nwg.newworlduide.AboutActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.nwg.newworlduide.MapActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nwg.newworlduide.GuidesActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nwg.newworlduide.BuildsActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nwg.newworlduide.DataBaseActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nwg.newworlduide.SettingsActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nwg.newworlduide.DrawerActivity"
            android:exported="true"
            android:label="@string/title_activity_drawer"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NewWorldMMORPGUltimateGuide.NoActionBar" />
        <activity
            android:name="com.nwg.newworlduide.SplashActivity"
            android:hardwareAccelerated="false"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>

