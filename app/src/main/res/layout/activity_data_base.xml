<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings"
    tools:context=".DataBaseActivity">

    <WebView
        android:id="@+id/webView"
        app:layout_constraintTop_toBottomOf="@+id/dbMute"
        app:layout_constraintBottom_toTopOf="@+id/frame2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtnToHome2"
        android:text="Back"
        android:fontFamily="@font/skita"
        android:textColor="#827D7D"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="23sp"
        android:background="@color/grey2"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/titleImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/frame"
        android:src="@drawable/database"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <ImageButton
        android:id="@+id/dbMute"
        android:onClick="dbMute"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_new_shape"
        android:src="@drawable/ic_baseline_music_off_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frame"
        android:layout_width="70dp"
        android:layout_height="60dp"/>


    <ImageView
        android:id="@+id/frame2"
        android:src="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>

    <HorizontalScrollView
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shapeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/items"
                android:text="Items"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:textColor="@color/white"
                android:background="@drawable/items"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Recipes"
                android:text="Recipes "
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/recpies"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Furniture"
                android:text="furniture"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:textSize="12sp"
                android:background="@drawable/furniture"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Gems"
                android:text="Gems"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/gems"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Perks"
                android:text="Perks"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/perks"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Achievements"
                android:text="Achievements"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:textSize="8sp"
                android:background="@drawable/achievements"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Creatures"
                android:text="Creatures"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:textSize="10sp"
                android:background="@drawable/creatures"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Dye"
                android:text="Dye"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/dye"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Gatherable"
                android:text="Gatherable"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:textSize="10sp"
                android:background="@drawable/gatherable"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/LootContainers"
                android:text="Loot \n Containers"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/loot"
                android:textSize="10sp"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Lore"
                android:text="Lore"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/lore"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Quests"
                android:text="Quests"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:background="@drawable/quest"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/NPCs"
                android:text="NPCs"
                android:shadowColor="#7F0303"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:shadowDx="5"
                android:onClick="NPCs"
                android:layout_marginStart="3dp"
                android:background="@drawable/npcs"
                app:layout_constraintTop_toTopOf="@+id/frame2"
                app:layout_constraintBottom_toBottomOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="@+id/frame2"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

        </LinearLayout>



    </HorizontalScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>