<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/settingsLogo"
            android:clickable="true"
            android:layout_gravity="center"
            android:src="@drawable/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/About"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="start"
            android:gravity="center_horizontal"
            android:text="About us"
            android:textColor="#827D7D"
            android:shadowColor="#7F0303"
            android:shadowDy="5"
            android:shadowRadius="20"
            android:shadowDx="5"
            android:textSize="25sp"
            android:fontFamily="@font/skita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backBtnFromAbout"
            android:layout_marginEnd="25dp"
            android:layout_gravity="end"
            android:gravity="center_horizontal"
            android:text="Back"
            android:textColor="#827D7D"
            android:shadowColor="#7F0303"
            android:shadowDy="5"
            android:shadowRadius="20"
            android:shadowDx="5"
            android:textSize="25sp"
            android:fontFamily="@font/skita"
            android:background="@drawable/button"
            android:layout_width="110dp"
            android:layout_height="43dp"/>


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/appName"
        android:text="New World MMORPG (Guide) \n \n Version: 1.0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_settings"
        app:layout_constraintEnd_toEndOf="parent"
        android:lineSpacingExtra="15dp"
        android:gravity="center"
        android:fontFamily="@font/skita"
        android:textColor="#827D7D"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/appInfo"
        android:text="This application provides some useful guides, Game's map, huge database and a lot of other useful stuff hope you like it :)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/skita"
        android:textColor="#827D7D"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/uiDesign"
        android:text="UI designers &amp; Editors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactMe"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/skita"
        android:textColor="#827D7D"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/speciaThx"
        android:text="Special thanks to new world fans team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactShady"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/skita"
        android:textColor="#827D7D"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contactMeVonj"
        android:text="Contact me"
        android:textColor="#ffffff"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="20sp"
        android:fontFamily="@font/skita"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/appInfo"
        app:layout_constraintStart_toStartOf="@+id/contactMe"
        app:layout_constraintEnd_toEndOf="@+id/meDiscord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/contactMe"
        android:src="@drawable/mail"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactMeVonj"
        android:layout_marginEnd="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/meDiscord"
        android:src="@drawable/ic_discord"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/contactMe"
        app:layout_constraintTop_toTopOf="@+id/contactMe"
        app:layout_constraintBottom_toBottomOf="@id/contactMe"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/setText1"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/meDiscord"
        app:layout_constraintTop_toTopOf="@+id/meDiscord"
        app:layout_constraintBottom_toBottomOf="@id/meDiscord"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:fontFamily="@font/skita"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contactThem"
        android:text="Contact them"
        android:textColor="#ffffff"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="20sp"
        android:fontFamily="@font/skita"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/uiDesign"
        app:layout_constraintStart_toStartOf="@+id/contactShady"
        app:layout_constraintEnd_toEndOf="@+id/shadyDiscord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/contactShady"
        android:src="@drawable/ic_discord"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactThem"
        android:layout_marginEnd="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/setText3"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/contactShady"
        app:layout_constraintTop_toTopOf="@+id/shadyDiscord"
        app:layout_constraintBottom_toBottomOf="@id/shadyDiscord"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/skita"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/shadyDiscord"
        android:src="@drawable/ic_discord"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/contactShady"
        app:layout_constraintTop_toTopOf="@+id/contactShady"
        app:layout_constraintBottom_toBottomOf="@id/contactShady"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/setText2"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/shadyDiscord"
        app:layout_constraintTop_toTopOf="@+id/shadyDiscord"
        app:layout_constraintBottom_toBottomOf="@id/shadyDiscord"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/skita"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Their Discord"
        android:textColor="#ffffff"
        android:shadowColor="#7F0303"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:textSize="20sp"
        android:fontFamily="@font/skita"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/speciaThx"
        app:layout_constraintStart_toStartOf="@+id/contactNw"
        app:layout_constraintEnd_toEndOf="@+id/contactNw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/contactNw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_discord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactShady" />


</androidx.constraintlayout.widget.ConstraintLayout>